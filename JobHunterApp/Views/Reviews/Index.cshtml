@model IEnumerable<JobHunterApp.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Job-Hunter"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            Review
        </th>
        <th>
            Stars
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Star.StarsID)/5
        </td>
                @*
    @Html.ActionLink("Edit", "Edit", new { id=item.ReviewID }) |
    @Html.ActionLink("Details", "Details", new { id=item.ReviewID })|
                *@
        @if (User.IsInRole("Admin"))
        {
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.ReviewID })
        </td>
        }
            
        
    </tr>
}

</table>
